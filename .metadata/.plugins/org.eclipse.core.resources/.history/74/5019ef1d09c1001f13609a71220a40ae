#ifndef INC_QUEUE_H_
#define INC_QUEUE_H_

#include "stdint.h"

#define QUEUE_SIZE 10000

typedef struct{
	uint8_t buffer[QUEUE_SIZE];
	uint16_t head;
	uint16_t tail;
	uint16_t count;
}OTA_Queue;

void Queue_Init(OTA_Queue *queue);
void Queue_Enqueue(OTA_Queue *queue, uint8_t data);
void Queue_Dequeue(OTA_Queue *queue, uint8_t *data);



#endif /* INC_QUEUE_H_ */
